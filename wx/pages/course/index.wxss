page{background: #F4F6FA;}
.active{color: #FF4C4C;}
.scroll_box{
    width: 100%;
    height: 50rpx;
    overflow: hidden;
    padding: 20rpx;
    background: #fff;
    white-space: nowrap;
    }
    .scroll_box scroll-view{
      height: 100%;
      width: auto;
      overflow:hidden;
    }
    .item_list{
    height: 100%;
    margin-right: 23rpx;
    display: inline-block;
    margin-left: 10px;
    }
/* --- list --- */
.exchange_list__item{background: #fff; padding: 32rpx; margin-bottom: 16rpx; border-bottom: 1rpx solid #efefef;}
.exchange_list__image{width: 160rpx; height: 160rpx;}
.exchange_list__content{width: 65%; margin-left: 25rpx;}
.exchange_list__title{font-size: 28rpx; margin-bottom: 8rpx; height: 70rpx; line-height: 35rpx; overflow: hidden;}
.exchange_list__info{font-size: 24rpx; color: #999;}
.exchange_list__info text{color: #FF4C4C; font-family: din; font-size: 32rpx;}
.exchange_list__icon{width: 32rpx; height: 32rpx; margin-left: auto;}