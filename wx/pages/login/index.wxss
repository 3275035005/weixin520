/* --- logo --- */
.login_logo{height: 400rpx; font-size: 50rpx;}



/* --- form --- */
.login_form{padding: 0 60rpx;}
.login_form__item{height: 112rpx; border-bottom: 1rpx solid #efefef; }
.login_form__label{position: relative; height: 112rpx;}
.login_form__title{font-size: 25rpx; width: 20%; line-height: 112rpx; color: #999;}
.login_form__box{width: 80%; height: 112rpx; position: relative; }

/* input */
.login_form__input{height: 100%; font-size: 28rpx;}
.login_form__input:active{border-bottom: 1rpx solid #ddd;}


/* button */
.page_button{margin-top: 40rpx;}
.page_button.weixin{background: linear-gradient(to bottom, #2AAE67 , #2DBC6F); }




/* --- other --- */
.login_other{padding: 0 60rpx; text-align: center; font-size: 25rpx; color: #ccc; margin-top: 15%;}
.login_other__column::before{content: "——"; margin-right: 32rpx; color: #ccc; }
.login_other__column::after{content: "——"; margin-left: 32rpx; color: #ccc; }
.login_other__icon{width: 80rpx; height: 80rpx; margin-top: 40rpx;}
.login_other__text{color: #666;}
.getcode{position: absolute; right: 0; top: 0; line-height: 112rpx; font-size: 25rpx; color: #558BFB; z-index: 999;}
.login_other__mobile{padding: 0 32rpx;}




/* --- agree --- */
.login_agree{padding: 0 60rpx; font-size: 28rpx; color: #666; margin-top: 32rpx; display: flex;}
.login_agree__checkbox{transform: scale(0.8); }
.login_agree__text{width: 90%;}
.login_agree__text text{color:#558BFB ;}